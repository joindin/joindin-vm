# File Managed by Puppet. Do not modify!

<VirtualHost *:<%= @port %>>
    ServerAdmin webmaster@<%= @name %>
    DocumentRoot <%= @docroot %>joind.in/src
    ServerName <%= @name %>
    serveralias web1*.ngrok.com
<% if @serveraliases != "" -%>
    ServerAlias <%= @serveraliases %>
<% end -%>
    ErrorLog <%= scope.lookupvar('apache::log_dir') %>/<%= @name %>-error_log
    CustomLog <%= scope.lookupvar('apache::log_dir') %>/<%= @name %>-access_log common
    SetEnv JOINDIN_DEBUG on

	<Directory <%= @docroot %>joind.in/src>
                <IfModule mod_rewrite.c>
                        Options +FollowSymLinks
                </IfModule>

               Options +Indexes +ExecCGI
               DirectoryIndex index.php
               AllowOverride All

                Order allow,deny
                Allow from all

                EnableMMAP Off
                EnableSendfile Off
   </Directory>

</VirtualHost>

